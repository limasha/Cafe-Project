@model IEnumerable<CafeProject.Models.OrderList>

@{
    ViewBag.Title = "Order Index";
}


<div style="font-family:Verdana;">
    <div>
        <h1 class="title" style="font-size: 2.5em;font-family:Arial;text-align:left;color:purple">Order Details</h1>
        <hr />
    </div>
    <div style="margin-top:3%;">
        <b>@Html.ActionLink("Create New Order", "PlaceOrder")</b>
    </div>

    <table class="table table-hover" style="margin-top:3%;margin-bottom:4%;">
        <tr style="background-color:black;color:white;">
        <th>
            @Html.DisplayName("Order ID")
        </th>
        <th>
            @Html.DisplayName("Item Name")
        </th>
        <th>
            @Html.DisplayName("Unit Price")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    
    <tr class="bg-danger">     
        <td>
            @Html.DisplayFor(modelItem => item.OrderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.ActionLink("Delete", "OrderIndex", new { id = item.OID })
        </td>
    </tr>
}
        
</table>

    <div class="row">
        <div class="col-sm-6"></div>

        <div class="col-sm-6">
            <div class="col-sm-11" style="margin-left:68%;margin-top:2%;margin-bottom:10%;">

                    <input type="submit" value="Save Order" class="btn btn-primary col-sm-4" style="position:relative;font-size: 14px;text-align:center;background-color:#4e054e;border:0px">

            </div>
        </div>
    </div>
</div>